<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>  
      <property name="LOG_PATTERN">${bundle:logging.pattern}</property> 
      <property name="APP_LOG_ROOT">${bundle:logging.root}</property> 
      <property name="SPRING_ENVIRONMENT">${bundle:spring.profiles.active}</property> 
      <property name="LOGGING_LEVEL">${bundle:logging.level}</property> 
      <property name="LOGGING_APPENDER">${bundle:logging.appender}</property> 
  </Properties>  
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>
        <RollingFile name="RollingFile"
                fileName="${APP_LOG_ROOT}/${SPRING_ENVIRONMENT}/application.log"
                filePattern="${APP_LOG_ROOT}/${SPRING_ENVIRONMENT}/application-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="1" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.eslam.poeauditor" additivity="false">
            <AppenderRef ref="${LOGGING_APPENDER}" />
        </Logger>
        <Root level="${LOGGING_LEVEL}">
            <AppenderRef ref="${LOGGING_APPENDER}" />
        </Root>
    </Loggers>
</Configuration>